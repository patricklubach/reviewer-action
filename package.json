{
  "name": "reviewers",
  "description": "reviewers action",
  "author": "patricklubach",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "bundle": "npm run format:write && npm run package",
    "dev": "npm ci --include=dev && npm run bundle",
    "env": "docker run -it --rm -v $PWD:/workspace --entrypoint scripts/ci.sh --workdir /workspace node:23",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "package": "npx ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "test:local:check": "act pull_request -e event.pull_request_example.json -W .github/workflows/check_reviews.yaml -j 'check_reviews' -s GITHUB_TOKEN=\"$(gh auth token)\" --input-file action.inputs",
    "update:lock": "npm update --save --include=dev",
    "test": "jest"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript"
  ],
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@octokit/action": "^8.0.2",
    "@octokit/core": "^7.0.4",
    "octokit": "^5.0.3",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "jest": "^30.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "glob": "10.3.10"
  },
  "type": "module"
}
